---
import type { Project } from "../lib/projects";
import Link from "./Link.astro";

type Props = {
  project: Project;
};

const {
  project: { repo: name, description, link },
} = Astro.props;
---

<div
  class="flex flex-col"
  style="
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
    border-radius: 8px;
    padding: 16px;
    margin: 16px;
    transform: translateY(-10px); /* Floating effect */
    transition: transform 0.3s ease, box-shadow 0.3s ease; /* Add transition for shadow */
    max-width: 100%;
    width: 100%; /* Ensure card uses full width of parent container */
    box-sizing: border-box;
    overflow: hidden; /* Ensure content doesnâ€™t overflow */
  "
  onmouseover="this.style.transform = 'translateY(-15px)'; this.style.boxShadow = '0 8px 12px rgba(0, 0, 0, 0.7)';"
  onmouseout="this.style.transform = 'translateY(-10px)'; this.style.boxShadow = '0 4px 6px rgba(0, 0, 0, 0.5)';"
>
  <Link href={link} style="text-decoration: none; color: inherit;">
    <span
      class="font-medium text-primary-400" /* Style name differently to indicate it's clickable */
      style="display: block; margin-bottom: 8px; font-size: 1.2rem; font-weight: bold;"
    >
      {name}
    </span>
  </Link>
  <span
    class="text-white"
    style="font-size: 1rem;"
  >
    {description}
  </span>
</div>
